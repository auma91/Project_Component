<% include ../partials/header %>
<button onclick="document.getElementById('id01').style.display='block'" type="submit" class="login-button" style="width:auto;border-radius: 40px;"><%- loginname%></button>
<div  style="background: #383838" class="jumbotron jumbotron-fluid">
  <h2 style="text-align:center;"><a class="title" href="/" style="color:#efefef; text-decoration: none;" class="display-4"><b>COOKI</b></a><h2>
</div>
<% include ../partials/messages %>
<div id="id01" class="modal">

  <form id="loginForm" action="../../login" method="POST" class="modal-content animate" >
    <div class="container">
      <label for="email"><b>Email</b></label>
      <input class="login-form" type="email" placeholder="Enter Email" name="username" required/>

      <label for="psw"><b>Password</b></label>
      <input class="login-form" type="password" placeholder="Enter Password" name="password" required/>

      <button onclick="document.getElementById("loginForm").submit();" type="submit">Login</button>
      <label>
        <input class="login-form" type="checkbox" checked="checked" name="remember"> Remember me
      </label>
    </div>

    <div class="container" style="background-color:#efefef">
      <button type="button" onclick="document.getElementById('id01').style.display='none'" class="cancelbtn">Cancel</button>
      <span class="psw" style="float: initial;">Need to <a href="../../register">register?</a></span>
      <span class="psw">Forgot <a href="#">password?</a></span>
    </div>
  </form>
</div>

<div class="search-box">
  <input class="search-txt" type="text" name="" placeholder="Search recipe ..."/>
  <a class="search-btn" href="#">
      <i class="fas fa-search"></i>
  </a>
</div>

<div  style="background: #383838" class="jumbotron jumbotron-fluid">
  <h2 style="text-align:center;"><a class="title" href="#" style="color:#efefef; text-decoration: none;" class="display-4"><b>FEATURED RECIPES</b></a><h2>
</div>

<div class="row">
  <div class="column">
    <div class="card">
      <img src="../../resources/img/arrozglam.jpg" alt="Picture of Aurangzeb" style="width: 100%;">
      <br>
      <h3 style="color:#efefef;">Arroz</h3>
    </div>
  </div>

  <div class="column">
    <div class="card">
      <img src="../resources/img/spegetti.jpg" alt="Picture of Aurangzeb" style="width: 100%;">
      <br>
      <h3 style="color:#efefef;">Spaggetti</h3>
    </div>
  </div>

  <div class="column">
    <div class="card">
      <img src="../resources/img/arrozpollo.jpg" alt="Picture of Aurangzeb" style="width: 100%;">
      <br>
      <h3 style="color:#efefef;">Chicken and Rice</h3>
    </div>
  </div>
</div>
<script type="text/javascript">
// Get the modal
var modal = document.getElementById('id01');

// When the user clicks anywhere outside of the modal, close it
window.onclick = function(event) {
  if (event.target == modal) {
      modal.style.display = "none";
  }
}
</script>
