          '<div class="card">'+
            '<iframe style= "width:100%" width="500" height="300" src="' + feat_recipes[i].videolink + '"> </iframe>' +
            '<div class="container">' +
              '<h4><b><a href = "/recipe?recipe_choice=' + feat_recipes[i].id + '">' + feat_recipes[i].name + '</a></b></h4>' +
              '<p> Prep time: ' + feat_recipes[i].prep_time + '</p>' +
              '<p> Difficulty: ' + feat_recipes[i].difficulty + '</p>' +
            '</div>' +
          '</div>' +
        '</div>'+
        '<div class="column" style="background-color:#aaa;">' +
          '<div class="card">'+
            '<iframe style= "width:100%" width="500" height="300" src="' + feat_recipes[i+1].videolink + '"> </iframe>' +
            '<div class="container">' +
              '<h4><b><a href = "/recipe?recipe_choice=' + feat_recipes[i+1].recipe_id + '">' + feat_recipes[i+1].name + '</a></b></h4>' +
              '<p> Prep time: ' + feat_recipes[i+1].prep_time + '</p>' +
              '<p> Difficulty: ' + feat_recipes[i+1].difficulty + '</p>' +
            '</div>' +
          '</div>' +
        '</div>'+
        '<div class="column" style="background-color:#aaa;">' +
          '<div class="card">'+
            '<iframe style= "width:100%" width="500" height="300" src="' + feat_recipes[i+2].videolink + '"> </iframe>' +
            '<div class="container">' +
              '<h4><b><a href = "/recipe?recipe_choice=' + feat_recipes[i+2].recipe_id + '">' + feat_recipes[i+2].name + '</a></b></h4>' +
